---
import Layout from '../../layouts/Layout.astro';
import { Header } from '@/components/Header';
import { Pricing } from '@/components/Pricing';
import { Footer } from '@/components/Footer';

const seoTitle = "Tarification Transparente - WorkflowLeaf";
const seoDescription = "Tarification transparente pour nos solutions d'automatisation. Choisissez entre l'Automatisation Démarrage Rapide ou les Plans d'Automatisation Guidée pour la gestion immobilière.";
const currentPath = "/fr/pricing";
const lang = "fr";
---

<Layout title={seoTitle} description={seoDescription} lang={lang} currentPath={currentPath}>
  <Header client:load />
  <main class="py-20 bg-background">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <Pricing client:load />
    </div>
  </main>
  <Footer client:load />
</Layout>